import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        String a = "*";
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter: ");
        int num = sc.nextInt();
		for (int i=1;i<=num;i++){
		    for (int j=num;j>=i;j--){
		        System.out.print(a);
		    }
		 System.out.println(" ");
		}
    }
}
